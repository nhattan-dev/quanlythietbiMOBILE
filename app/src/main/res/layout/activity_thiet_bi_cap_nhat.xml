<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/phonghoc_bg">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="25"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/editTextTextTenThietBiEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:hint="Tên thiết bị"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textColorHint="@color/black"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/tb_item_bg"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/editTextTextLoaiThietBiEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ems="10"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:background="@drawable/tb_item_bg"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTextTextXuatXuEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:hint="Xuất xứ"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textColorHint="@color/black"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/tb_item_bg"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTextSoLuongEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:hint="Số lượng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textColorHint="@color/black"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/tb_item_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imageButtonCameraEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/camera" />

            <ImageView
                android:id="@+id/imageViewHinhAnhEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/image_gallery" />

            <ImageView
                android:id="@+id/imageButtonFolderEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/folder" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:weightSum="7">

            <TextView
                android:id="@+id/buttonHuyEdit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="HỦY"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/buttonUpdateTB"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="THÊM"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>